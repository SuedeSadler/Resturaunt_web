@{ ViewData["Title"] = "Homepage";
                Layout = "/Views/Shared/_HeaderLayout.cshtml"; }

<html>
<head>
    <link rel="stylesheet" href="~/css/main.css" />
    </head>
<body>
    <div class="return">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Return</a>

    </div>

    <div style="text-align:center">


        <h1>Create Reservation</h1>
    </div>
    <div class=" border border-dark container shadow p-4 mb-4"  >



        <form action="results.html" method="GET" enctype="multipart/form-data">
            <div class="row">

                <div class="col">


                    <label for="start"> Date:</label>

                    <input class="form-control" type="date" id="start" name="trip-start"
                           value="2022-07-22"
                           min="2022-01-01" max="2022-12-31">
                </div>
                <div class="col">


                    <label for="appt">Choose a time for your Reservation:</label>

                    <input  class="form-control"  type="time" id="appt" name="appt"
                           min="00:00" max="24:00" required>
                </div>
            </div> 

            <div>
                <label for="tentacles">Number of People:</label>

                <input  class="form-control"  type="number" id="tentacles" name="tentacles"
                       min="1" max="100">
            </div>
            <div class="row">

                <div class="col">

                    <label for="name">First Name:</label>
                    <input  class="form-control" type="text" name="name" id="name" required>

                </div>
                <div class="col">


                    <label for="name">Last Name:</label>
                    <input  class="form-control" type="text" name="name" id="name" required>
                </div>
            </div>
            <div class="row">
                <div class="col">

                    <label for="email">Email:</label>
                    <input class="form-control"  type="email" name="email" id="email" required>
                </div>
                <div class="col">


                    <label for="phone">Phone Number:</label>

                    <input class="form-control"  type="tel" id="phone" name="phone"
                          pattern="[0-9]{10}"    required>
                </div>
            </div>










            <button class="btn btn-danger" type="reset">Reset</button>
            <div style="text-align:center">


                <button class="btn btn-info" type="submit">Create Booking</button>
            </div>
        </form>

    </div>



</body>

</html>