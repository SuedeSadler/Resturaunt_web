@model Resturaunt_web.Models.Reservations1

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_HeaderLayout.cshtml";
}
<link rel="stylesheet" href="~/css/main.css" />

<div class="return">
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Return</a>
</div>



<div class="row">
    <div class="col-md-4 container">
        <h1>Create Reservation</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumPeople" class="control-label"></label>
                <input asp-for="NumPeople" class="form-control" />
                <span asp-validation-for="NumPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booked_time" class="control-label"></label>
                <input asp-for="Booked_time" class="form-control" />
                <span asp-validation-for="Booked_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
