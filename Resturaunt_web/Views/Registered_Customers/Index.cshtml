@model IEnumerable<Resturaunt_web.Models.Registered_Customers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HeaderLayout.cshtml";
}
<link rel="stylesheet" href="~/css/admin.css" />

<div class="return">
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminHomepage">Return</a>
</div>

<h1>User Manager</h1>

<div class="container  p-4 mb-4">
    <div class="table">
        <p style="margin-top:10px;margin-bottom:10px;">
            <a asp-action="Create">Create New</a>
        </p>
        <table style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerPassword)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerPassword)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CustomerID">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.CustomerID">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.CustomerID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>